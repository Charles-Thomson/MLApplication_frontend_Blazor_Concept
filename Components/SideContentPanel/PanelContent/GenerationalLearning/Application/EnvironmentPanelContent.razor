@inject InstanceAttributeStateContainer stateContainer
@inject ILogger<EnvironmentPanelContent> Logger
@using MLApplication_frontend.Components.Buttons

<div class="side-navigation-panel__content-container">

    <div class="side-navigation-panel__title">Maze Size</div>


    <div class="side-navigation-panel__sub-headding">Environment Dimensions</div>

    <div class="page_element">
    <label for="environment-dimension-X">Environment dimension X</label>

    <select @bind="@EnvironmentDimension_X" class="page_element__dropdown" id="environment-dimension-X">
        @foreach (var dimension in AvailableEnvironmentDimensions)
            {
            <option value="@dimension">@dimension</option>
            }
        </select>

    </div>

    <div class="page_element">
    <label for="environment-dimension-Y">Environment dimension Y</label>

    <select @bind="@EnvironmentDimension_Y" class="page_element__dropdown" id="environment-dimension-Y">
        @foreach (var dimension in AvailableEnvironmentDimensions)
            {
            <option value="@dimension">@dimension</option>
            }
        </select>

    </div>

    <div class="side-navigation-panel__sub-headding">Node Selection</div>

    
    <div class="page_element">
        
        <div class="page_element__button-group">
            <button class="page_element__button-group__button" @onclick="@(e => @UpdateEnvironemntNodeSelectionType(3))">
                @EnvironemntButtonSVGs.StartIcon_svg
            </button>

            <button class="page_element__button-group__button" @onclick="@(e => @UpdateEnvironemntNodeSelectionType(1))">
                @EnvironemntButtonSVGs.GoalIcon_svg
            </button>

            <button class="page_element__button-group__button" @onclick="@(e => @UpdateEnvironemntNodeSelectionType(2))">
                @EnvironemntButtonSVGs.ObsticalIcon_svg
            </button>

            <button class="page_element__button-group__button" @onclick="@(e => @UpdateEnvironemntNodeSelectionType(0))">
                @EnvironemntButtonSVGs.EmptyIcon_svg
            </button>
        </div>
    </div>
</div>




